{
  "name": "vtex-boilerplate",
  "author": "@pachecovit",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Custom theme based VTEX configurable project structure (CMS)",
  "vtex": {
    "store": "rdlay",
    "acronym": "rdy",
    "environment": "vtexcommercestable",
    "device": "web",
    "protocol": "https"
  },
  "scripts": {
    "dev": "rimraf build && webpack --config ./webpack/webpack.dev.js --watch --mode development --env.STORE_NAME=rdlay --env.STORE_ACRO=rdy",
    "deploy": "rimraf build && webpack --config ./webpack/webpack.prod.js --mode production --env.STORE_ACRO=rdy"
  },
  "dependencies": {
    "@babel/core": "^7.10.2",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "del": "^3.0.0",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^7.1.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "sass-resources-loader": "^2.0.3",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.2",
    "vtex-boilerplate": "file:",
    "webpack-glob-entries": "^1.0.1",
    "webpack-glob-entry": "^2.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "sass-loader": "^8.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
